{
  "name": "console-patterns",
  "description": "Collection of snippets to render logical patterns",
  "version": "2.1.0",
  "repository": "git@github.com:grikomsn/console-patterns.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "build": "yarn build:dir && yarn build:favicons && next build",
    "build:dir": "mkdirp ./public/icons/",
    "build:favicons": "node generate-favicons",
    "clean": "rimraf .next \"./public/!(social.png)\"",
    "develop": "next dev",
    "format": "yarn format:index && yarn format:patterns && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:patterns": "prettier --write \"patterns/*.js\"",
    "format:src": "prettier --write \"src/**/*.{css,js,ts,tsx}\""
  },
  "dependencies": {
    "@sindresorhus/class-names": "^1.1.0",
    "copee": "^1.0.6",
    "favicons": "^6.2.0",
    "next": "^9.5.1",
    "next-seo": "^4.7.3",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-live": "^2.2.2",
    "tailwindcss": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mkdirp": "^1.0.4",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "patterns/*.js": [
      "prettier --write"
    ],
    "src/**/*.{css,js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "patterns/*.js"
        ],
        "options": {
          "semi": false
        }
      }
    ]
  },
  "license": "MIT"
}
