{
  "name": "console-patterns",
  "description": "Collection of snippets to render logical patterns",
  "version": "5.0.0",
  "repository": "git@github.com:grikomsn/console-patterns.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "# general commands": "##################################################",
    "build": "next build && yarn generate:sitemap",
    "build:static": "yarn build && next export",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "dev": "cross-env PORT=8181 next",
    "generate:favicons": "node src/scripts/favicons.js",
    "generate:sitemap": "next-sitemap --config src/config/sitemap.js",
    "lint": "next lint --fix --no-cache",
    "prepare": "husky install $PWD/.husky",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check",
    "#": "###################################################################"
  },
  "dependencies": {
    "@monaco-editor/react": "^4",
    "@sindresorhus/class-names": "^2",
    "autoprefixer": "^10",
    "copee": "^1",
    "critters": "^0",
    "fathom-client": "^3",
    "favicons": "^6",
    "kbar": "latest",
    "next": "^12",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "postcss": "^8",
    "preact": "^10",
    "prism-react-renderer": "^1",
    "react": "^17",
    "react-dom": "^17",
    "react-live": "^2",
    "react-tracked": "^1",
    "scheduler": "^0",
    "tailwindcss": "^2",
    "ts-dedent": "^2",
    "typescript": "^4",
    "zustand": "^3"
  },
  "devDependencies": {
    "@types/favicons": "^6",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/tailwindcss": "^2",
    "eslint": "^7",
    "eslint-config-kdnj": "^1",
    "eslint-config-next": "^12",
    "eslint-plugin-tailwindcss": "^1",
    "cross-env": "^7",
    "husky": "^7",
    "lint-staged": "^11"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react",
      "plugin:@next/next/recommended"
    ],
    "ignorePatterns": [
      ".next",
      "generated",
      "node_modules",
      "patterns"
    ],
    "plugins": [
      "tailwindcss"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "off"
      ],
      "tailwindcss/classnames-order": [
        "warn"
      ],
      "tailwindcss/no-contradicting-classname": [
        "error"
      ]
    },
    "settings": {
      "tailwindcss": {
        "callees": [
          "cx"
        ]
      }
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
