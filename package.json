{
  "name": "console-patterns",
  "description": "Collection of snippets to render logical patterns",
  "version": "5.0.0",
  "repository": "git@github.com:grikomsn/console-patterns.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "# general commands": "##################################################",
    "build": "yarn generate:favicons && next build && yarn generate:sitemap",
    "build:static": "yarn build && next export",
    "deduplicate": "npx yarn-deduplicate && yarn",
    "dev": "next",
    "generate:favicons": "node src/scripts/favicons.js",
    "generate:sitemap": "next-sitemap --config src/config/sitemap.js",
    "lint": "eslint --fix \"./**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install $PWD/.husky",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check",
    "#": "###################################################################"
  },
  "dependencies": {
    "@monaco-editor/react": "^4",
    "@sindresorhus/class-names": "^1",
    "@types/favicons": "^6",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "autoprefixer": "^10",
    "copee": "^1",
    "eslint": "^7",
    "eslint-config-kdnj": "^0",
    "eslint-config-next": "^11",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-tailwindcss": "^1",
    "favicons": "^6",
    "next": "^11",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "postcss": "^8",
    "preact": "^10",
    "prism-react-renderer": "^1",
    "react": "^17",
    "react-dom": "^17",
    "react-live": "^2",
    "tailwindcss": "^2",
    "typescript": "^4",
    "zustand": "^3"
  },
  "devDependencies": {
    "husky": "^7",
    "lint-staged": "^11"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react",
      "plugin:@next/next/recommended"
    ],
    "ignorePatterns": [
      "generated",
      "patterns"
    ],
    "plugins": [
      "tailwindcss"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "off"
      ]
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
